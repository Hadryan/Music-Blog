<div class="row">

    <div class="small-12 medium-8 large-6 columns medium-push-4 large-push-3">
    	<br />
    	<h1>My Posts</h1>
    	<h6 class="subheader"><%= link_to 'Go Back', root_path %></h6>
      <h6 class="subheader"><%= link_to 'New Post', new_post_path %></h6>
    	<hr />
		<% @posts.each do |post| %>
<!-- List Entries -->
      	<div class="row">
        	<div class="small-9 large-10 columns ">
          		<h2><strong><%= post.title %></strong></h2>
          		<h4 class="subheader"><%= post.content %></h4>
          		<ul class="inline-list">
            		<li><%= link_to 'View', post %></li>
            		<li><%= link_to 'Edit', edit_post_path(post) %></li>
            		<li><%= link_to 'Delete', post, :method => :delete %></li>
          		</ul>            
        	</div>
      	</div>
      	<hr />
      <!-- End List Entry -->
		<% end %>

	</div>
</div>